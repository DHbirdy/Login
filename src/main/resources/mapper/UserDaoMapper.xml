<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ceair.dao.UserDao">
    <insert id="save" parameterType="com.ceair.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into t_account values(#{id},#{username},#{password})
    </insert>

    <select id="findByUsername" resultType="com.ceair.entity.User">
        SELECT
            id,
            username,
            password
        FROM
            t_account
        WHERE
            username=#{username}
    </select>

    <!-- id查找用户 -->
    <!-- User findById(Integer id) -->
    <select id="findById" resultType="com.ceair.entity.User">
        SELECT
            id,
            username,
            password
        FROM
            t_account
        WHERE
            id=#{id}
    </select>

</mapper>